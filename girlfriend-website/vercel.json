{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/page1",
      "dest": "/page1.html"
    },
    {
      "src": "/page2", 
      "dest": "/page2.html"
    },
    {
      "src": "/page3",
      "dest": "/page3.html"
    },
    {
      "src": "/page4",
      "dest": "/page4.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
} 